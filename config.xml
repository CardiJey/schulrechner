<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cardijey.schulrechner" version="Set automatically by update_version.js" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Schulrechner</name>
    <description>A remake of a familiar calculator many know from school.</description>
    <author email="your-email@example.com" href="https://yourwebsite.com">
        Your Name
    </author>

    <!-- Point to your index.html -->
    <content src="index.html" />

    <!-- Allow all HTTP and HTTPS requests -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- Add other configurations as needed -->
    <platform name="android">
        <icon monochrome="res/icon/android/monochrome.xml" background="res/icon/android/background.xml" foreground="res/icon/android/foreground.xml" src="www/img/android-icons/drawable-ldpi-icon.png" density="ldpi" />
        <icon monochrome="res/icon/android/monochrome.xml" background="res/icon/android/background.xml" foreground="res/icon/android/foreground.xml" src="www/img/android-icons/drawable-mdpi-icon.png" density="mdpi" />
        <icon monochrome="res/icon/android/monochrome.xml" background="res/icon/android/background.xml" foreground="res/icon/android/foreground.xml" src="www/img/android-icons/drawable-hdpi-icon.png" density="hdpi" />
        <icon monochrome="res/icon/android/monochrome.xml" background="res/icon/android/background.xml" foreground="res/icon/android/foreground.xml" src="www/img/android-icons/drawable-xhdpi-icon.png" density="xhdpi" />
        <icon monochrome="res/icon/android/monochrome.xml" background="res/icon/android/background.xml" foreground="res/icon/android/foreground.xml" src="www/img/android-icons/drawable-xxhdpi-icon.png" density="xxhdpi" />
        <icon monochrome="res/icon/android/monochrome.xml" background="res/icon/android/background.xml" foreground="res/icon/android/foreground.xml" src="www/img/android-icons/drawable-xxxhdpi-icon.png" density="xxxhdpi" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/icon/android/foreground.xml" />
    </platform>

    <!-- Permissions or specific features -->
    <access origin="*" />
</widget>
